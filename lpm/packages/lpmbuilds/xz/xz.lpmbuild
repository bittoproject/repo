# LPM build script for xz
NAME="xz"
VERSION="5.6.2"
RELEASE="1"
ARCH="${ARCH:-x86_64}"
SUMMARY="XZ compression utilities"
URL="https://tukaani.org/xz/"
LICENSE=""
SOURCE=()
REQUIRES=("glibc")
PROVIDES=("xz")
CONFLICTS=()
OBSOLETES=()
RECOMMENDS=()
SUGGESTS=()

prepare() {
  set -euxo pipefail
  cd "$SRCROOT"
  :
}

build() {
  set -euxo pipefail
  cd "$SRCROOT"
  ./configure --prefix=/usr
  make -j"$(nproc)"
}

staging() {
  set -euxo pipefail
  cd "$SRCROOT"
  make DESTDIR="$pkgdir" install
}
