# LPM build script for gawk
NAME="gawk"
VERSION="5.3.0"
RELEASE="1"
ARCH="${ARCH:-x86_64}"
SUMMARY="GNU awk"
URL="https://www.gnu.org/software/gawk/"
LICENSE=""
SOURCE=()
REQUIRES=("glibc")
PROVIDES=("gawk")
CONFLICTS=()
OBSOLETES=()
RECOMMENDS=()
SUGGESTS=()

prepare() {
  set -euxo pipefail
  cd "$SRCROOT"
  :
}

build() {
  set -euxo pipefail
  cd "$SRCROOT"
  ./configure --prefix=/usr
  make -j"$(nproc)"
}

staging() {
  set -euxo pipefail
  cd "$SRCROOT"
  make DESTDIR="$pkgdir" install
}
