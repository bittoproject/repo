# LPM build script for zlib
NAME="zlib"
VERSION="1.3.1"
RELEASE="1"
ARCH="${ARCH:-x86_64}"
SUMMARY="Compression library"
URL="https://zlib.net/"
LICENSE=""
SOURCE=()
REQUIRES=("glibc")
PROVIDES=("zlib")
CONFLICTS=()
OBSOLETES=()
RECOMMENDS=()
SUGGESTS=()

prepare() {
  set -euxo pipefail
  cd "$SRCROOT"
  :
}

build() {
  set -euxo pipefail
  cd "$SRCROOT"
  ./configure --prefix=/usr
  make -j"$(nproc)"
}

staging() {
  set -euxo pipefail
  cd "$SRCROOT"
  make DESTDIR="$pkgdir" install
}
