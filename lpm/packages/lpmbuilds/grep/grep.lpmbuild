# LPM build script for grep
NAME="grep"
VERSION="3.11"
RELEASE="1"
ARCH="${ARCH:-x86_64}"
SUMMARY="GNU grep"
URL="https://www.gnu.org/software/grep/"
LICENSE=""
SOURCE=()
REQUIRES=("glibc")
PROVIDES=("grep")
CONFLICTS=()
OBSOLETES=()
RECOMMENDS=()
SUGGESTS=()

prepare() {
  set -euxo pipefail
  cd "$SRCROOT"
  :
}

build() {
  set -euxo pipefail
  cd "$SRCROOT"
  ./configure --prefix=/usr
  make -j"$(nproc)"
}

staging() {
  set -euxo pipefail
  cd "$SRCROOT"
  make DESTDIR="$pkgdir" install
}
